{
  "name": "react-search",
  "private": false,
  "version": "0.0.0",
  "description": "React search component with advanced fuzzy search for accurate and user-friendly results",
  "author": "N Praveen Kumar <praveennetinti2002@gmail.com> (https://github.com/praveen-kumar-10)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/praveen-kumar-10/react-search.git"
  },
  "homepage": "https://github.com/praveen-kumar-10/native-nextui#readme",
  "bugs": {
    "url": "https://github.com/praveen-kumar-10/native-nextui/issues"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "main": "./dist/react-search.umd.js",
  "module": "./dist/react-search.es.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && tsup",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "precommit": "lint-staged",
    "prepare": "husky",
    "prepublishOnly": "pnpm build",
    "release": "release-it"
  },
  "typings": "dist/index.d.ts",
  "dependencies": {
    "fuse.js": "^7.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@release-it/bumper": "^6.0.1",
    "@types/node": "^20.12.12",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.4",
    "prettier": "^3.2.5",
    "release-it": "^17.3.0",
    "tsup": "^8.0.2",
    "typescript": "^5.2.2",
    "vite": "^5.2.0"
  },
  "resolutions": {
    "@types/react": "^18.2.66"
  },
  "exports": {
    ".": {
      "import": "./dist/react-search.es.js",
      "require": "./dist/react-search.umd.js"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --quiet --fix",
      "prettier --write --ignore-unknown"
    ],
    "*.{json,html}": [
      "prettier --write --ignore-unknown"
    ]
  }
}
